<% @snippets.each do |snippet| %>

<div class="out">
	<div class="topA">
		<%= link_to image_tag('uparrow.png'), upvote_path(snippet), method: :post %>
	</div>
	<div class="points">
		<%= snippet.points %>
	</div>
	<div class="btmA">
		<%= link_to image_tag('downarrow.png'), downvote_path(snippet), method: :post %>
	</div>
	<div class="greenbox">
		<div id="title">
			<h2><%= snippet.title%></h2>
			<%= snippet.user.name %>
		</div>
		<div class="code">
			<%= snippet.code%>
		</div>
		<%= truncate(snippet.description, :length => 80) %>
		<%= "created " + localize_time(snippet.created_at) + " ago" %>

		<% if snippet.user==current_user%>
		<%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end%>
	</div>
</div>


<% if @snippets.nil? || @snippets.blank? %>
  <p>There's nothing here</p>
<% else %>
  <% @snippets.each do |snippet| %>
	
	<div id="outter">  
    <%= snippet.title %>
    <%= truncate(snippet.description, :length => 80) %>
    
    <%= snippet.points %>               
    <%= localize_time(snippet.created_at) + " ago" %>                                                            
    <%= snippet.user.name %>
    <%= link_to 'Show', snippet %>
    <%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
<% end %>
<% end %>