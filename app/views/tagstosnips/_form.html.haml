= form_for @tagstosnip do |f|
  - if @tagstosnip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tagstosnip.errors.count, "error")} prohibited this tagstosnip from being saved:"
      %ul
        - @tagstosnip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tag
    = f.text_field :tag
  .field
    = f.label :snippet
    = f.text_field :snippet
  .actions
    = f.submit 'Save'
