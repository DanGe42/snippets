= form_for @snippet_tag do |f|
  - if @snippet_tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@snippet_tag.errors.count, "error")} prohibited this snippet tag from being saved:"
      %ul
        - @snippet_tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tag
    = f.text_field :tag
  .field
    = f.label :snippet
    = f.text_field :snippet
  .actions
    = f.submit 'Save'
